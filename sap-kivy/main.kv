#:kivy 1.9.1

<MainScreen>:
    id: main_screen
    reset_flow_popup: reset_flow_popup.__self__
    sap_flow_cal_popup: sap_flow_cal_popup.__self__
    water_flow_cal_popup: water_flow_cal_popup.__self__
    low_flow_popup: low_flow_popup.__self__
    low_level_popup: low_level_popup.__self__
    arduino: app.arduino
    sap_cal_input: sap_cal_input
    water_cal_input: water_cal_input
    hp_pump_on_delay_input: hp_pump_on_delay_input
    min_flow_input: min_flow_input
    level_sw_mode_switch: level_sw_mode_switch
    screen_brightness_slider: screen_brightness_slider
    sump_rly: app.arduino.sump_rly
    low_flow: app.arduino.low_flow_flag
    low_level: app.arduino.low_level_flag
    sap_cnts_per_gal: self.sap_cnts_per_gal
    water_cnts_per_gal: self.water_cnts_per_gal

    LabelStatus:
        size_hint: None, None
        height: main_tabbed_panel.tab_height
        width: 125
        pos: main_tabbed_panel.width - self.width - 2, main_tabbed_panel.height - self.height - 2
        font_size: '17sp'
        bstate: app.arduino.system_status

    TabbedPanel:
        id: main_tabbed_panel
        size_hint: 1, 1
        do_default_tab: False
        on_children: main_tabbed_panel.switch_to(main)

        TabbedPanelItem:
            text: 'Auto'
            id: main

            BoxLayout:
                orientation: 'vertical'
                padding: 5
                spacing: 0

                GridLayout:
                    id: flow_layout
                    rows: 1
                    cols: 3
                    size_hint: 1, 0.6
                    padding: 0, 0, 0, 0
                    spacing: 10

                    FlowCluster:
                        label: 'Water'
                        flow: app.arduino.water_flow
                        gallons: app.arduino.water_gallons

                    FlowCluster:
                        label: 'Sap'
                        flow: app.arduino.sap_flow
                        gallons: app.arduino.sap_gallons

                    FlowCluster:
                        label: 'Total'
                        flow: app.arduino.total_flow
                        gallons: app.arduino.total_gallons

                Label:
                    text: '[size=30]Efficiency (Live): [/size]' + app.arduino.efficiency + '[size=25] %[/size]'
                    font_size: '45sp'
                    markup: 'True'
                    size_hint: 1, .2

                Label:
                    text: '[size=20]Efficiency (Total): [/size]' + app.arduino.efficiency_total + '[size=20] %[/size]'
                    font_size: '30sp'
                    markup: 'True'
                    size_hint: 1, .2

                GridLayout:
                    id: main_buttons_layout
                    rows: 1
                    cols: 4
                    size_hint: 1, .2
                    padding: 0, 10, 0, 0

                    MainButton:
                        text: 'Enable'
                        on_release: app.arduino.set('digital_output/enable/1/'); #root.send_settings()

                    MainButton:
                        text: 'Run Auto'
                        on_release: app.arduino.set('run_auto/1/'); #root.send_settings()

                    MainButton:
                        text: 'Stop'
                        on_release: app.arduino.set('run_auto/0/')

                    MainButton:
                        text: 'Reset'
                        on_release: reset_flow_popup.open()

                    Popup:
                        id: reset_flow_popup
                        title: "Reset Flow Data"
                        size_hint: None, None
                        size: 300, 300
                        pos_hint: {'middle': 1, 'center': 1}
                        on_parent:
                            if self.parent == main_buttons_layout: self.parent.remove_widget(self)

                        BoxLayout:
                            orientation: 'vertical'

                            Label:
                                text: 'Are you sure you want to reset flow data?'
                                size_hint: 1, .8
                                text_size: self.width, None
                                height: self.texture_size[1]
                                font_size: '18sp'
                                halign: 'center'

                            GridLayout:
                                rows: 1
                                cols: 2
                                size_hint: 1, .2

                                Button:
                                    text: 'Yes'
                                    on_release: reset_flow_popup.dismiss(); root.reset_flows()

                                Button:
                                    text: 'Cancel'
                                    on_release: reset_flow_popup.dismiss()

        TabbedPanelItem:
            text: 'Manual'
            id: manual_tab

            BoxLayout:
                orientation: 'vertical'
                padding: 5
                spacing: 0

                GridLayout:
                    id: manual_flow_layout
                    rows: 1
                    cols: 3
                    size_hint: 1, 0.6
                    padding: 0, 0, 0, 0
                    spacing: 10

                    FlowCluster:
                        label: 'Water'
                        flow: app.arduino.water_flow
                        gallons: app.arduino.water_gallons

                    FlowCluster:
                        label: 'Sap'
                        flow: app.arduino.sap_flow
                        gallons: app.arduino.sap_gallons

                    FlowCluster:
                        label: 'Total'
                        flow: app.arduino.total_flow
                        gallons: app.arduino.total_gallons

                Label:
                    text: '[size=30]Efficiency: [/size]' + app.arduino.efficiency + '[size=25] %[/size]'
                    font_size: '45sp'
                    markup: 'True'
                    size_hint: 1, .2

                Label:
                    text: '[size=20]Efficiency (Total): [/size]' + app.arduino.efficiency_total + '[size=20] %[/size]'
                    font_size: '30sp'
                    markup: 'True'
                    size_hint: 1, .2

                GridLayout:
                    id: manual_buttons_layout
                    rows: 1
                    cols: 5
                    size_hint: 1, .2
                    padding: 0, 10, 0, 0

                    MainButton:
                        text: 'Enable'
                        on_release: app.arduino.set('digital_output/enable/1/'); #root.send_settings()

                    MainTogButton:
                        id: sump_button
                        text: 'Sump Pump'
                        on_release: app.arduino.set_state('digital_output/sump_rly/', self.state); #root.send_settings()
                        state: 'down' if app.arduino.sump_rly == '1' else 'normal'

                    MainTogButton:
                        id: hi_press_button
                        text: 'Hi Press Pump'
                        disabled: 'True'
                        on_release: app.arduino.set_state('digital_output/hi_press_rly/', self.state); #root.send_settings()
                        state: 'down' if app.arduino.hi_press_rly == '1' else 'normal'

                    MainButton:
                        text: 'Stop'
                        on_release: app.arduino.set('run_auto/0/')

                    MainButton:
                        text: 'Reset'
                        on_release: reset_flow_popup.open()

        TabbedPanelItem:
            text: 'Settings'
            id: settings_tab

            RelativeLayout:
                id: settings_layout

                BoxLayout:
                    id: settings_box_layout
                    orientation: 'horizontal'
                    padding: 10
                    spacing: 15

                    BoxLayout:
                        id: backlight_layout
                        orientation: 'vertical'
                        size_hint_x: 0.2
                        padding: 10
                        spacing: 5

                        Label:
                            text: 'Screen\nBrightness'
                            markup: True
                            size_hint_y: 0.15
                            text_size: self.size
                            halign: 'center'
                            valign: 'middle'

                        Slider:
                            id: screen_brightness_slider
                            on_touch_move: root.brightness()
                            #on_touch_up: root.save_settings()
                            orientation: 'vertical'
                            min: 20
                            max: 200
                            value: 200
                            size_hint_y: 0.9

                    BoxLayout:
                        spacing: 10
                        padding: 8
                        size_hint_x: 0.3
                        orientation: 'vertical'

                        BoxLayout:
                            orientation: 'vertical'
                            padding: 3, 0, 0, 0
                            size_hint_y: None
                            height: 110

                            Label:
                                text: 'Sap Cal:'

                            BoxLayout:
                                orientation: 'horizontal'

                                TextInput:
                                    id: sap_cal_input
                                    multiline: False
                                    on_text_validate: root.save_settings()
                                    text: '30'
                                    size_hint_x: 0.4

                                Label:
                                    text: 'gallons'
                                    size_hint_x: 0.6
                                    halign: 'left'
                                    valign: 'middle'

                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint_y: None
                                height: 25

                                Label:
                                    text: 'counts:'
                                    size_hint_x: 0.6
                                    text_size: self.size
                                    halign: 'left'
                                    valign: 'middle'

                                Label:
                                    id: sap_counts
                                    text: root.arduino.sap_count
                                    size_hint_x: 0.4
                                    text_size: self.size
                                    halign: 'left'
                                    valign: 'middle'

                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint_y: None
                                height: 25

                                Label:
                                    text: 'cnts/gal:'
                                    size_hint_x: 0.6
                                    text_size: self.size
                                    halign: 'left'
                                    valign: 'top'

                                Label:
                                    id: sap_counts_per_gal
                                    text: root.arduino.sap_cnts_per_gal_readback
                                    size_hint_x: 0.4
                                    text_size: self.size
                                    halign: 'left'
                                    valign: 'top'

                        BoxLayout:
                            orientation: 'vertical'
                            padding: 0, 9, 0, 0

                            Button:
                                id: cal_flows
                                text: 'Cal Sap\n Flow Meter'
                                halign: 'center'
                                valign: 'middle'
                                on_press: sap_flow_cal_popup.open()

                        BoxLayout:
                        BoxLayout:

                    BoxLayout:
                        spacing: 10
                        padding: 8
                        size_hint_x: 0.3
                        orientation: 'vertical'

                        BoxLayout:
                            orientation: 'vertical'
                            padding: 3, 0, 0, 0
                            size_hint_y: None
                            height: 110

                            Label:
                                text: 'Water Cal:'

                            BoxLayout:
                                orientation: 'horizontal'

                                TextInput:
                                    id: water_cal_input
                                    multiline: False
                                    on_text_validate: root.save_settings()
                                    text: '30'
                                    size_hint_x: 0.4

                                Label:
                                    text: 'gallons'
                                    size_hint_x: 0.6
                                    halign: 'left'
                                    valign: 'middle'

                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint_y: None
                                height: 25

                                Label:
                                    text: 'counts:'
                                    size_hint_x: 0.6
                                    text_size: self.size
                                    halign: 'left'
                                    valign: 'middle'

                                Label:
                                    id: water_counts
                                    text: root.arduino.water_count
                                    size_hint_x: 0.4
                                    text_size: self.size
                                    halign: 'left'
                                    valign: 'middle'

                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint_y: None
                                height: 25

                                Label:
                                    text: 'cnts/gal:'
                                    size_hint_x: 0.6
                                    text_size: self.size
                                    halign: 'left'
                                    valign: 'top'

                                Label:
                                    id: water_counts_per_gal
                                    text: root.arduino.water_cnts_per_gal_readback
                                    size_hint_x: 0.4
                                    text_size: self.size
                                    halign: 'left'
                                    valign: 'top'

                        BoxLayout:
                            orientation: 'vertical'
                            padding: 0, 9, 0, 0

                            Button:
                                id: cal_flows
                                text: 'Cal Water\n Flow Meter'
                                halign: 'center'
                                valign: 'middle'
                                on_press: water_flow_cal_popup.open()

                        BoxLayout:
                        BoxLayout:


                    GridLayout:
                        cols: 1
                        rows: 6
                        spacing: 10
                        padding: 8
                        size_hint_x: 0.25

                        BoxLayout:
                            orientation: 'vertical'
                            padding: 30, 0, 0, 0

                            Label:
                                text: 'HP Pump On Delay:'

                            BoxLayout:
                                orientation: 'horizontal'

                                TextInput:
                                    id: hp_pump_on_delay_input
                                    multiline: False
                                    on_text_validate: root.save_settings()
                                    text: '30'
                                    size_hint_x: 0.4

                                Label:
                                    text: 'sec'
                                    size_hint_x: 0.6

                        BoxLayout:
                            orientation: 'vertical'
                            padding: 30, 0, 0, 0

                            Label:
                                text: 'Minimum Flow:'

                            BoxLayout:
                                orientation: 'horizontal'

                                TextInput:
                                    id: min_flow_input
                                    multiline: False
                                    on_text_validate: root.save_settings()
                                    text: '30'
                                    size_hint_x: 0.4

                                Label:
                                    text: 'GPH'
                                    size_hint_x: 0.6

                        BoxLayout:
                            orientation: 'vertical'
                            padding: 30, 0, 0, 0

                            Label:
                                text: 'Level SW Mode:'

                            Switch:
                                id: level_sw_mode_switch
                                on_active: root.save_settings()

                        BoxLayout:
                        BoxLayout:
                        BoxLayout:

                    RelativeLayout:
                        id: status_layout
                        orientation: 'vertical'
                        size_hint_x: 0.36
                        padding: 10
                        spacing: 5

                        Button:
                            text: 'E-Stop Status'
                            size_hint: None, None
                            height: 50
                            width: 150
                            pos_hint: {'top': .95, 'right': 1}
                            state: 'down' if app.arduino.estop_mon == '1' else 'normal'
                            halign: 'center'
                            valign: 'middle'

                        Button:
                            text: 'Level SW Status'
                            size_hint: None, None
                            height: 50
                            width: 150
                            pos_hint: {'top': .82, 'right': 1}
                            state: 'down' if app.arduino.level_sw == '1' else 'normal'
                            halign: 'center'
                            valign: 'middle'

                #Button:
                    #id: exit_button
                    #on_press: app.exit_app()
                    #text: 'X'
                    #size_hint: None, None
                    #size: 20, 20
                    #right: root.right

        Popup:
            id: sap_flow_cal_popup
            title: "Calibrate Sap Flow Meter"
            size_hint: None, None
            size: 300, 300
            pos_hint: {'middle': 1, 'center': 1}
            on_parent:
                if self.parent == settings_tab: self.parent.remove_widget(self)

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Are you sure you want to re-calibrate the Sap Flow Meter?'
                    size_hint: 1, .8
                    text_size: self.width, None
                    height: self.texture_size[1]
                    font_size: '18sp'
                    halign: 'center'

                GridLayout:
                    rows: 1
                    cols: 2
                    size_hint: 1, .2

                    Button:
                        text: 'Yes'
                        on_release: sap_flow_cal_popup.dismiss(); root.cal_sap_flow()

                    Button:
                        text: 'Cancel'
                        on_release: sap_flow_cal_popup.dismiss()

        Popup:
            id: water_flow_cal_popup
            title: "Calibrate Water Flow Meter"
            size_hint: None, None
            size: 300, 300
            pos_hint: {'middle': 1, 'center': 1}
            on_parent:
                if self.parent == settings_tab: self.parent.remove_widget(self)

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Are you sure you want to re-calibrate the Water Flow Meter?'
                    size_hint: 1, .8
                    text_size: self.width, None
                    height: self.texture_size[1]
                    font_size: '18sp'
                    halign: 'center'

                GridLayout:
                    rows: 1
                    cols: 2
                    size_hint: 1, .2

                    Button:
                        text: 'Yes'
                        on_release: water_flow_cal_popup.dismiss(); root.cal_water_flow()

                    Button:
                        text: 'Cancel'
                        on_release: water_flow_cal_popup.dismiss()

        Popup:
            id: low_flow_popup
            title: "Low Flow"
            size_hint: None, None
            size: 300, 300
            pos_hint: {'middle': 1, 'center': 1}
            on_parent:
                if self.parent == settings_tab: self.parent.remove_widget(self)

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'The system shut down due to low flow.'
                    size_hint: 1, .8
                    text_size: self.width, None
                    height: self.texture_size[1]
                    font_size: '18sp'
                    halign: 'center'

                GridLayout:
                    rows: 1
                    cols: 2
                    size_hint: 1, .2

                    Button:
                        text: 'Ok'
                        on_release: low_flow_popup.dismiss()

                    #Button:
                        #text: 'Cancel'
                        #on_release: low_flow_popup.dismiss()
        Popup:
            id: low_level_popup
            title: "Low Flow"
            size_hint: None, None
            size: 300, 300
            pos_hint: {'middle': 1, 'center': 1}
            on_parent:
                if self.parent == settings_tab: self.parent.remove_widget(self)

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'The system shut down due to low level.'
                    size_hint: 1, .8
                    text_size: self.width, None
                    height: self.texture_size[1]
                    font_size: '18sp'
                    halign: 'center'

                GridLayout:
                    rows: 1
                    cols: 2
                    size_hint: 1, .2

                    Button:
                        text: 'Ok'
                        on_release: low_level_popup.dismiss()

                    #Button:
                        #text: 'Cancel'
                        #on_release: low_level_popup.dismiss()

<MainButton@Button, MainTogButton@ToggleButton>:
    font_size: '20sp'

<PumpState@LabelB>:
    font_size: '18sp'
    markup: 'True'
    #bcolor_on: 0.19, 0.64, 0.8, 1
    bcolor_on: 0.03, 0.55, 0.07, 1
    bcolor_off: 0.34, 0.34, 0.34, 1
